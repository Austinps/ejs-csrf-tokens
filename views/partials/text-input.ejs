<div class="flex items-center justify-between">
  <label for="text" class="block text-sm font-medium leading-6 text-gray-900"
    >Secret</label
  >
  <div class="relative">
    <input
      id="text"
      name="text"
      type="text"
      autocomplete="secret"
      required
      class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6 pr-10"
    />
    <button
      type="button"
      class="absolute inset-y-0 right-0 pr-3 flex items-center"
      onclick="toggleVisibility()"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-5 w-5"
        viewBox="0 0 20 20"
        fill="currentColor"
      >
        <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
        <path
          fill-rule="evenodd"
          d="M10 3a7 7 0 100 14 7 7 0 000-14zM2 10a8 8 0 1116 0 8 8 0 01-16 0z"
          clip-rule="evenodd"
        />
      </svg>
    </button>
  </div>
</div>

<script>
  function toggleVisibility() {
    var x = document.getElementById('text');
    if (x.type === 'text') {
      x.type = 'password';
    } else {
      x.type = 'text';
    }
  }
</script>
